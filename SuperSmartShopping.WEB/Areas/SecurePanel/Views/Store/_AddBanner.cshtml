<div class="row">
    <div class="col-lg-12">
        <form id="frmAddUpdateBannerImages" class="form-horizontal">
            <div class="form-group colMarginBottom">
                <label class="col-sm-2 control-label">Image</label>
                <div class="col-lg-4">
                    <div class="upload-btn-wrapper">
                        <button class="uploadBtn" type="button">
                            <i class="sm-file"></i> <br>Upload your file (.png, .jpg, .jpeg)
                        </button>
                        <input type="file" class="form-control" id="bannerImgPath" name="bannerImgPath" onchange="readImage(this)" multiple />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="preview-image upload-btn-wrapper previewBorder" style="display:none">

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="submitBtn mr-5" type="button" data-bind="@Url.Action("AddUpdateBannerImage","Store",new {area="securepanel" })" data-content="@Url.Action("AdvertisementImage","Store",new {area="securepanel" })" onclick="saveImages(this)">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
