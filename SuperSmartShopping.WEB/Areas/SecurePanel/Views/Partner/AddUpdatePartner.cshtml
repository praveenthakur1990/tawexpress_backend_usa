@model SuperSmartShopping.DAL.ViewModels.PartnerModel
@{
    ViewBag.Title = "AddUpdatePartner";
    Layout = "~/Areas/SecurePanel/Views/Shared/_LayoutSecurePanel.cshtml";
}
@section scripts{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyDpzQ5OcH6MUL5I1yFK5K7Sa5Jvy7uFvA8"></script>
    <script src="~/Content/project/partner.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="row pageTitle">
            <div class="col-lg-12">
                <h1>Add New Partner</h1>
                <p>Please fill all the required fields<span style="color:red">(*)</span></p>
            </div>
        </div>
        <div class="ibox-content wrapperPadding">
            <form id="frmAddUpdatePartner" class="form-horizontal">
                @Html.HiddenFor(c => c.PartnerID)
                <div class="row colMarginBottom">
                    <div class="col-lg-3">
                        <h2 class="formHeading">Basic Details</h2>
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="row colMarginBottom">
                                    <div class="col-lg-12">
                                        <label>Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" maxlength="50" autocomplete="off" value="@Model.Name" />
                                    </div>
                                </div>
                                <div class="row colMarginBottom">
                                    <div class="col-lg-6">
                                        <label>Email Address</label>
                                        @if (Model.PartnerID > 0)
                                        {
                                            <label class="form-control">@Model.EmailAddress</label>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" maxlength="100" autocomplete="off" value="@Model.EmailAddress" />
                                        }

                                    </div>
                                    <div class="col-lg-6">
                                        <label>Contact Number</label>
                                        <input type="text" class="form-control number-format" id="ContactNo" name="ContactNo" maxlength="15" autocomplete="off" value="@Model.ContactNo" />
                                    </div>
                                </div>
                                <div class="row colMarginBottom">
                                    <div class="col-lg-6">
                                        <label>Address1</label>
                                        <input type="text" class="form-control" id="address" name="address" maxlength="200" autocomplete="off" value="@Model.Address" />
                                    </div>
                                    <div class="col-lg-6">
                                        <label>State</label>
                                        <input type="text" class="form-control" id="state" name="state" maxlength="100" autocomplete="off" value="@Model.State" readonly />
                                    </div>
                                </div>
                                <div class="row colMarginBottom">
                                    <div class="col-lg-6">
                                        <label>City</label>
                                        <input type="text" class="form-control" id="city" name="city" maxlength="50" autocomplete="off" value="@Model.City" readonly />
                                    </div>
                                    <div class="col-lg-6">
                                        <label>ZipCode</label>
                                        <input type="text" class="form-control numbers-only" id="zipCode" name="zipCode" maxlength="6" autocomplete="off" value="@Model.ZipCode" />
                                    </div>
                                </div>
                                <div class="row colMarginBottom">
                                    <div class="col-lg-6">
                                        <label>Country</label>
                                        <input type="text" class="form-control numbers-only" id="Country" name="Country" maxlength="4" autocomplete="off" value="@Model.Country" readonly />
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Commison (in %)</label>
                                        <input type="text" class="form-control numbers-only" id="Commision" name="Commision" maxlength="6" autocomplete="off" value="@Model.Commision" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row colMarginBottom">
                    <div class="col-lg-3">&nbsp;</div>
                    <div class="col-lg-9">
                        <div class="row colMarginBottom">
                            <div class="col-lg-6">
                                <button class="submitBtn" type="button" onclick="addUpdatePartner()">Save changes</button>
                                <button class="submitBtn" type="button" onclick="window.location.href = '@Url.Action("Index","Partners",new {area="securepanel" })'">Back To List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


