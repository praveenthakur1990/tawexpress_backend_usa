
@model IEnumerable<SuperSmartShopping.DAL.Models.UnitMeasurement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section scripts{
    <script src="~/Content/theme/plugins/sweet-alert/sweetalert.js"></script>
    <script src="~/Content/project/unitMeasurement.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="row pageTitle">
            <div class="col-lg-6">
                <h1>Unit Measurement List</h1>
            </div>
            <div class="col-lg-6 text-right">
                <button class="btn btn-primary" onclick="window.location.href='@Url.Action("AddUpdate","UnitMeasurement",new {area="admin",@id=0 })'"><i class="sm-add"></i>Add New</button>
            </div>          
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover listTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Created On</th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="gradeA">

                                    <td>@item.Name</td>
                                    <td>@item.CreatedDate</td>
                                    <td class="text-right">
                                        <div class="actionBg">
                                            <div class="dropdown">
                                                <button type="button" class="listActionBtn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    Action <span class="caret"></span>
                                                </button>
                                                <div class="dropdown-menu actionDropWidth dropdown-menu-right">
                                                    <ul>
                                                        <li><a href="@Url.Action("AddUpdate","UnitMeasurement",new {area="admin",id=item.Id })"><i class="sm-edit"></i> Edit</a></li>
                                                        @*<li><a href="javsacript:void(0);" onclick="markAsDeleted('@item.Id')"><i class="sm-delete"></i> Delete</a></li>*@
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">
                                    <div class="alert alert-danger text-center" role="alert">
                                        No data found
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

