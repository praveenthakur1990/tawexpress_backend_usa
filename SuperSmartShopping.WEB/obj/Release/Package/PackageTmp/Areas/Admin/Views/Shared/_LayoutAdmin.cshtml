     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="orderTitle">
                    Send Weekly Circular Message
                    <span aria-hidden="true" class="close" data-dismiss="modal" aria-label="Close">X</span>
                </div>
            </div>
            <div class="modal-body p-0">

            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="addBannerModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="orderTitle">
                    Add Banner Images
                    <span aria-hidden="true" class="close" data-dismiss="modal" aria-label="Close">X</span>
                </div>
            </div>
            <div class="modal-body p-0">

            </div>
        </div>
    </div>
</div>