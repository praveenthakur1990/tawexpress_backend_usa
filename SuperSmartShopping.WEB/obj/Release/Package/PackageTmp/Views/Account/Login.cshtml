@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/Content/theme/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/theme/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/theme/css/animate.css" rel="stylesheet" />
    <link href="~/Content/theme/css/style.css" rel="stylesheet" />
    <link href="~/Content/theme/css/toastr.css" rel="stylesheet" />
</head>
<body>
    <div style="background-image: url(/Content/img/login-image.jpeg);" class="loginSection"></div>
    <div class="loginSectionForm" style="background-image: url(/Content/img/backdrop-smart-menu.png);">
        <div class="animated fadeInDown loginModelSec text-center">
            <img src="/Content/img/smart-menu-pad-logo.png" alt="image" />
            <h3>Login in your account</h3>
            <form class="m-t" id="frmLogin" role="form">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Username" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
                </div>
                <button type="button" onclick="login()" class="btn btn-primary block full-width m-b">Login</button>
                <a href="@Url.Action("ForgetPassword","Account")">Forgot password?</a>               
            </form>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/Content/theme/js/jquery-2.1.1.js"></script>
    <script src="~/Content/theme/js/jquery.validate.min.js"></script>
    <script src="~/Content/theme/js/bootstrap.min.js"></script>
    <script src="~/Content/theme/js/toastr.js"></script>
    <script src="~/Content/project/login.js"></script>
</body>
</html>