@model SuperSmartShopping.DAL.ViewModels.PlanModel
@{
    ViewBag.Title = "AddUpdatePlan";
    Layout = "~/Areas/SecurePanel/Views/Shared/_LayoutSecurePanel.cshtml";
}

@section scripts{
    <script src="~/Content/project/plan.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="row pageTitle">
            <div class="col-lg-12">
                <h1>Add New Plan</h1>
                <p>Please fill all the required fields<span style="color:red">(*)</span></p>
            </div>
        </div>
        <div class="ibox-content wrapperPadding">
            <form id="frmAddUpdatePlan" class="form-horizontal">
                @Html.HiddenFor(c => c.Id)
                @Html.HiddenFor(c => c.ProductId)
                @Html.HiddenFor(c => c.PriceId)

                <div class="row colMarginBottom">
                    <div class="col-lg-3">
                        <h2 class="formHeading">Basic Details</h2>
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="row colMarginBottom">
                                    <div class="col-lg-12">
                                        <label>Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" maxlength="50" autocomplete="off" value="@Model.Name" />
                                    </div>
                                </div>
                                <div class="row colMarginBottom">
                                    <div class="col-lg-6">
                                        <label>Price ($) </label>
                                        @if (Model.Id == 0)
                                        {
                                            <input type="text" class="form-control numbers-only" id="Price" name="Price" maxlength="5" autocomplete="off" value="@Model.Price" />
                                        }
                                        else
                                        {
                                            <label class="form-control">@Model.Price</label>
                                            @Html.HiddenFor(c => c.Price)
                                        }

                                    </div>
                                    <div class="col-lg-6">
                                        <label>Interval</label>
                                        @if (Model.Id == 0)
                                        {
                                            <select class="form-control" id="Interval" name="Interval">
                                                <option value="">Select</option>
                                                <option value="D" @(Model.Interval != null && Model.Interval != string.Empty ? (Model.Interval == "D" ? "Selected" : "") : "")>Daily</option>
                                                <option value="M" @(Model.Interval != null && Model.Interval != string.Empty ? (Model.Interval == "M" ? "Selected" : "") : "")>Monthly</option>
                                                <option value="A" @(Model.Interval != null && Model.Interval != string.Empty ? (Model.Interval == "A" ? "Selected" : "") : "")>Annual</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <label class="form-control">@(Model.Interval=="M"? "Monthly":(Model.Interval=="D" ?"Daily":"Yearly"))</label>
                                            @Html.HiddenFor(c => c.Interval)
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row colMarginBottom">
                    <div class="col-lg-3">&nbsp;</div>
                    <div class="col-lg-9">
                        <div class="row colMarginBottom">
                            <div class="col-lg-6">
                                <button class="submitBtn" type="button" onclick="addUpdatePlan()">Save changes</button>
                                <button class="submitBtn" type="button" onclick="window.location.href = '@Url.Action("Index","Plan",new {area="securepanel" })'">Back To List</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
