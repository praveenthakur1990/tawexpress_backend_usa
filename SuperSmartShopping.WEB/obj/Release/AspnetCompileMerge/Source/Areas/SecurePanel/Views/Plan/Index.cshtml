@model IEnumerable<SuperSmartShopping.DAL.ViewModels.PlanModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SecurePanel/Views/Shared/_LayoutSecurePanel.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row pageTitle">
            <div class="col-lg-6">
                <h1>Plan List</h1>
            </div>
            <div class="col-lg-6 text-right">
                <button class="btn btn-primary" onclick="window.location.href='@Url.Action("AddUpdatePlan","Plan",new {area="securepanel",@id=0 })'"><i class="sm-add"></i>Add New</button>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover dataTables-example">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price($)</th>
                            <th>Interval</th>
                            <th>CreatedDate</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="gradeA">
                                        <td>@item.Name</td>
                                        <td>@String.Format("{0}{1}", "$", @item.Price)</td>
                                        <td>@(item.Interval=="M" ? "Monthly":item.Interval=="D"?"Daily": "Annually")</td>
                                        <td>@item.CreatedDate</td>
                                        <td class="center">
                                            <a href="@Url.Action("AddUpdatePlan","Plan",new {area="SecurePanel",id=item.Id})" class="editButon"><i class="fa fa-edit"></i>Edit</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">
                                        <div class="alert alert-danger text-center" role="alert">
                                            No data found
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>